<Layouts.app flash={@flash} current_scope={@current_scope}>
  <div class="min-h-screen bg-gray-900 pb-20">
    <!-- Header -->
    <div class="pt-8 pb-6 px-6">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-white mb-2">
          Workout Notebook
        </h1>
        <p class="text-gray-400">Track your fitness journey</p>
      </div>
    </div>
    
<!-- Main Content -->
    <div class="px-6">
      <!-- Create New Workout Button -->
      <div class="mb-6">
        <button
          phx-click="create_workout"
          class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold text-lg py-4 px-6 rounded-xl transition-all duration-200"
        >
          + Create New Workout
        </button>
      </div>
      
<!-- Sorting Controls -->
      <div class="mb-6">
        <div class="flex flex-wrap gap-3">
          <button
            phx-click="sort"
            phx-value-sort_by="date"
            class={[
              "font-semibold px-4 py-2 rounded-lg border transition-all duration-200",
              if(@sort_by == "date",
                do: "bg-orange-500 text-white border-orange-500",
                else: "bg-gray-800 text-gray-300 border-gray-700 hover:border-orange-500"
              )
            ]}
          >
            ğŸ“… By Date
          </button>
          <button
            phx-click="sort"
            phx-value-sort_by="alphabetical"
            class={[
              "font-semibold px-4 py-2 rounded-lg border transition-all duration-200",
              if(@sort_by == "alphabetical",
                do: "bg-orange-500 text-white border-orange-500",
                else: "bg-gray-800 text-gray-300 border-gray-700 hover:border-orange-500"
              )
            ]}
          >
            ğŸ”¤ A-Z
          </button>
          <button
            phx-click="sort"
            phx-value-sort_by="date_modified"
            class={[
              "font-semibold px-4 py-2 rounded-lg border transition-all duration-200",
              if(@sort_by == "date_modified",
                do: "bg-orange-500 text-white border-orange-500",
                else: "bg-gray-800 text-gray-300 border-gray-700 hover:border-orange-500"
              )
            ]}
          >
            â° Recent
          </button>
        </div>
      </div>
      
<!-- Workout List -->
      <%= if @workouts_empty? do %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">ğŸ’ª</div>
          <h2 class="text-xl font-bold text-white mb-2">No Workouts Yet!</h2>
          <p class="text-gray-400">Create your first workout to get started</p>
        </div>
      <% else %>
        <div id="workouts" phx-update="stream" class="space-y-4">
          <%= for {id, workout} <- @streams.workouts do %>
            <div
              id={id}
              phx-click="view_workout"
              phx-value-id={workout.id}
              class={[
                "bg-gray-800 rounded-xl p-4 border cursor-pointer transition-all duration-200 hover:bg-gray-750",
                get_border_color(workout.metric)
              ]}
            >
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-lg font-bold text-white">{workout.name}</h3>
                <span class={[
                  "text-white text-xs font-semibold px-2 py-1 rounded-full",
                  get_metric_color(workout.metric)
                ]}>
                  {workout.metric}
                </span>
              </div>
              <p class="text-gray-300 text-sm mb-3 line-clamp-2">
                {workout.description}
              </p>
              <div class="text-xs text-gray-500">
                Created: {format_date(workout.inserted_at)} â€¢ Modified: {format_date(
                  workout.updated_at
                )}
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
<!-- Use shared bottom navigation -->
    <RepRivalsWeb.Components.BottomNavbar.bottom_navbar current_page="notebook" />
  </div>
</Layouts.app>

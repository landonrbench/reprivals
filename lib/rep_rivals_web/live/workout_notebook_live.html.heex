<Layouts.app flash={@flash} current_scope={@current_scope}>
  <div class="min-h-screen bg-gradient-to-br from-orange-500 via-red-500 to-pink-600">
    <!-- Header -->
    <div class="pt-12 pb-8 px-6">
      <div class="text-center">
        <h1 class="text-5xl font-black text-white mb-2 tracking-tight">
          REP<span class="text-yellow-300">RIVALS</span>
        </h1>
        <p class="text-xl font-bold text-orange-100 mb-8">Your Workout Notebook</p>
      </div>
    </div>
    
<!-- Main Content -->
    <div class="px-6 pb-6">
      <!-- Create New Workout Button -->
      <div class="mb-8">
        <button
          phx-click="create_workout"
          class="w-full bg-white text-red-600 font-black text-xl py-4 px-6 rounded-2xl shadow-lg border-4 border-yellow-300 hover:bg-yellow-50 transition-all duration-200 transform hover:scale-105"
        >
          + CREATE NEW WORKOUT
        </button>
      </div>
      
<!-- Sorting Controls -->
      <div class="mb-6">
        <div class="flex flex-wrap gap-3">
          <button
            phx-click="sort"
            phx-value-sort_by="date"
            class={[
              "font-bold px-4 py-2 rounded-xl shadow-md border-2",
              if(@sort_by == "date",
                do: "bg-yellow-300 text-red-700 border-white",
                else: "bg-white/20 text-white border-white/30"
              )
            ]}
          >
            ğŸ“… BY DATE
          </button>
          <button
            phx-click="sort"
            phx-value-sort_by="alphabetical"
            class={[
              "font-bold px-4 py-2 rounded-xl shadow-md border-2",
              if(@sort_by == "alphabetical",
                do: "bg-yellow-300 text-red-700 border-white",
                else: "bg-white/20 text-white border-white/30"
              )
            ]}
          >
            ğŸ”¤ A-Z
          </button>
          <button
            phx-click="sort"
            phx-value-sort_by="date_modified"
            class={[
              "font-bold px-4 py-2 rounded-xl shadow-md border-2",
              if(@sort_by == "date_modified",
                do: "bg-yellow-300 text-red-700 border-white",
                else: "bg-white/20 text-white border-white/30"
              )
            ]}
          >
            â° RECENT
          </button>
        </div>
      </div>
      
<!-- Workout List -->
      <%= if @workouts_empty? do %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">ğŸ’ª</div>
          <h2 class="text-2xl font-bold text-white mb-2">No Workouts Yet!</h2>
          <p class="text-orange-100 font-semibold">Create your first workout to get started</p>
        </div>
      <% else %>
        <div id="workouts" phx-update="stream" class="space-y-4">
          <%= for {id, workout} <- @streams.workouts do %>
            <div
              id={id}
              phx-click="view_workout"
              phx-value-id={workout.id}
              class={[
                "bg-white/95 rounded-2xl p-5 shadow-lg border-l-6 cursor-pointer transition-all duration-200 hover:shadow-xl hover:scale-105",
                get_border_color(workout.metric)
              ]}
            >
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-2xl font-black text-red-700">{workout.name}</h3>
                <span class={[
                  "text-white text-sm font-bold px-3 py-1 rounded-full",
                  get_metric_color(workout.metric)
                ]}>
                  {workout.metric}
                </span>
              </div>
              <p class="text-red-600 font-semibold mb-3 line-clamp-2">
                {workout.description}
              </p>
              <div class="text-sm text-gray-600 font-medium">
                Created: {format_date(workout.inserted_at)} â€¢ Modified: {format_date(
                  workout.updated_at
                )}
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      
<!-- Bottom Navigation Hint -->
      <div class="mt-12 text-center">
        <p class="text-white/80 font-bold text-lg">ğŸ’ª CRUSH YOUR GOALS ğŸ’ª</p>
      </div>
    </div>
  </div>
</Layouts.app>
